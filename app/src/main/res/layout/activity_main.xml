<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1A29"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/inicio2tela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:foregroundGravity="center"
        android:src="@drawable/movie2tela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        android:layout_width="96dp"
        android:layout_height="29dp"
        android:layout_margin="5dp"
        android:text="Em exibição"
        android:textColor="#DEDDDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="73dp">

    </TextView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="475dp"
            android:layout_height="240dp"
            android:layout_marginTop="642dp"
            android:layout_marginLeft="21dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img1"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/imagem1">

            </ImageView>

            <ImageView
                android:id="@+id/im2"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/imagem2">

            </ImageView>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_marginRight="5dp"
                android:src="@drawable/imagem3">

            </ImageView>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_marginRight="5dp"
                android:src="@drawable/imagem4">

            </ImageView>

            <ImageView
                android:id="@+id/img5"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_marginRight="5dp"
                android:src="@drawable/iamgem5">

            </ImageView>

            <ImageView
                android:id="@+id/img6"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_marginRight="5dp"
                android:src="@drawable/imagem6">

            </ImageView>

            <ImageView
                android:id="@+id/img7"
                android:layout_width="150px"
                android:layout_height="225px"
                android:layout_marginRight="5dp"
                android:src="@drawable/imagem7">

            </ImageView>


        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
